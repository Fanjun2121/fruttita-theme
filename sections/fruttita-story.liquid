<!--
  Fruttita Custom Section: Brand Story (Image + Text)
  With image hover zoom, magazine-style quote marks
-->

<style>
  .fruttita-story-section {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 6rem 1.5rem;
    font-family: 'Switzer', sans-serif;
  }

  .story-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1100px;
    margin: 0 auto;
  }

  .story-image {
    position: relative;
    border-radius: 1.25rem;
    overflow: hidden;
    aspect-ratio: 4 / 5;
    box-shadow: 0 20px 60px rgba(79,44,29,0.15);
    transition: box-shadow 0.5s ease;
  }

  .story-image:hover {
    box-shadow: 0 30px 80px rgba(79,44,29,0.25);
  }

  .story-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .story-image:hover img {
    transform: scale(1.05);
  }

  .story-image-placeholder {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background: linear-gradient(135deg, rgba(79,44,29,0.08) 0%, rgba(198,129,43,0.12) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(79,44,29,0.25);
    font-size: 1rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: transform 0.7s ease;
  }

  .story-image:hover .story-image-placeholder {
    transform: scale(1.05);
  }

  .story-text {
    padding: 1rem 0;
  }

  .story-subtitle {
    font-family: 'Pacifico', cursive;
    color: #C6812B;
    font-size: 1.5rem;
    display: block;
    margin-bottom: 1rem;
  }

  .story-title {
    font-size: 2.2rem;
    font-weight: 800;
    line-height: 1.3;
    margin-bottom: 2rem;
    letter-spacing: 0.02em;
  }

  .story-quote {
    position: relative;
    padding-left: 1.5rem;
    border-left: 3px solid rgba(198,129,43,0.3);
    margin-bottom: 2.5rem;
  }

  .story-quote::before {
    content: '\201C';
    font-family: 'Pacifico', cursive;
    font-size: 4rem;
    color: rgba(198,129,43,0.2);
    position: absolute;
    top: -1.5rem;
    left: -0.5rem;
    line-height: 1;
  }

  .story-body {
    font-size: 1.05rem;
    line-height: 1.9;
    color: rgba(79,44,29,0.7);
    position: relative;
    z-index: 1;
  }

  .story-btn {
    display: inline-block;
    background: transparent;
    color: {{ section.settings.text_color }};
    padding: 0.9rem 2.2rem;
    border-radius: 50px;
    font-weight: 700;
    text-decoration: none;
    letter-spacing: 0.04em;
    border: 2px solid rgba(79,44,29,0.25);
    transition: all 0.3s ease;
    font-size: 0.95rem;
  }

  .story-btn:hover {
    background: #4F2C1D;
    color: #F4E3C9;
    border-color: #4F2C1D;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(79,44,29,0.2);
  }

  @media (max-width: 768px) {
    .fruttita-story-section {
      padding: 4rem 1.5rem;
    }

    .story-container {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .story-image {
      aspect-ratio: 16 / 10;
    }

    .story-title {
      font-size: 1.8rem;
    }

    .story-body {
      font-size: 1rem;
    }
  }
</style>

<div class="fruttita-story-section">
  <div class="story-container">
    <div class="story-image">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: section.settings.image_alt }}
      {% else %}
        <div class="story-image-placeholder">Upload Image</div>
      {% endif %}
    </div>

    <div class="story-text">
      <span class="story-subtitle">{{ section.settings.subtitle }}</span>
      <h2 class="story-title">{{ section.settings.title }}</h2>
      <div class="story-quote">
        <p class="story-body">{{ section.settings.body }}</p>
      </div>
      {% if section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_link }}" class="story-btn">{{ section.settings.btn_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Fruttita Story",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Story Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Baobab tree in the African wilderness"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "The Tree of Life"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "把旷野的干净和野，带进日常"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body Text",
      "default": "关注每一个个体的 Well-being。在过度消耗的都市生活中，提供一种 0 负担、能快速回血的天然解决方案。"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "了解我们的故事"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F9F1E6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#4F2C1D"
    }
  ],
  "presets": [
    {
      "name": "Fruttita Story"
    }
  ]
}
{% endschema %}
