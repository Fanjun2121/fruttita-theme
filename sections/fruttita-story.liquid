<!--
  Fruttita Custom Section: Brand Story (Image + Text)
-->

<style>
  .fruttita-story-section {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 5rem 1.5rem;
    font-family: 'Switzer', sans-serif;
  }

  .story-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 1100px;
    margin: 0 auto;
  }

  .story-image {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    aspect-ratio: 4 / 5;
  }

  .story-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .story-image-placeholder {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background: linear-gradient(135deg, rgba(244,227,201,0.1) 0%, rgba(198,129,43,0.15) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(244,227,201,0.3);
    font-size: 1rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .story-text {
    padding: 1rem 0;
  }

  .story-subtitle {
    font-family: 'Pacifico', cursive;
    color: #C6812B;
    font-size: 1.5rem;
    display: block;
    margin-bottom: 1rem;
  }

  .story-title {
    font-size: 2.2rem;
    font-weight: 800;
    line-height: 1.3;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .story-body {
    font-size: 1.05rem;
    line-height: 1.9;
    color: rgba(244, 227, 201, 0.8);
    margin-bottom: 2.5rem;
  }

  .story-btn {
    display: inline-block;
    background: transparent;
    color: #F4E3C9;
    padding: 0.9rem 2.2rem;
    border-radius: 50px;
    font-weight: 700;
    text-decoration: none;
    letter-spacing: 0.04em;
    border: 2px solid rgba(244, 227, 201, 0.4);
    transition: all 0.3s ease;
    font-size: 0.95rem;
  }

  .story-btn:hover {
    background: #F4E3C9;
    color: #4F2C1D;
    border-color: #F4E3C9;
  }

  @media (max-width: 768px) {
    .story-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .story-image {
      aspect-ratio: 16 / 10;
    }

    .story-title {
      font-size: 1.8rem;
    }

    .story-body {
      font-size: 1rem;
    }
  }
</style>

<div class="fruttita-story-section">
  <div class="story-container">
    <div class="story-image">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: section.settings.image_alt }}
      {% else %}
        <div class="story-image-placeholder">Upload Image</div>
      {% endif %}
    </div>

    <div class="story-text">
      <span class="story-subtitle">{{ section.settings.subtitle }}</span>
      <h2 class="story-title">{{ section.settings.title }}</h2>
      <p class="story-body">{{ section.settings.body }}</p>
      {% if section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_link }}" class="story-btn">{{ section.settings.btn_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Fruttita Story",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Story Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Baobab tree in the African wilderness"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "The Tree of Life"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "把旷野的干净和野，带进日常"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body Text",
      "default": "关注每一个个体的 Well-being。在过度消耗的都市生活中，提供一种 0 负担、能快速回血的天然解决方案。"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "了解我们的故事"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F9F1E6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#4F2C1D"
    }
  ],
  "presets": [
    {
      "name": "Fruttita Story"
    }
  ]
}
{% endschema %}
