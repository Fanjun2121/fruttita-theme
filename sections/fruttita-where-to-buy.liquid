<!--
  Fruttita Custom Section: Where to Buy
  Channel logos in a row with links
-->

<style>
  .fruttita-where-to-buy-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 5rem 1.5rem;
    font-family: 'Switzer', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .fruttita-where-to-buy-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 0;
  }

  .wtb-inner-{{ section.id }} {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .wtb-subtitle-{{ section.id }} {
    font-family: 'Pacifico', cursive;
    color: #C6812B;
    font-size: 1.3rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .wtb-title-{{ section.id }} {
    font-size: 2.2rem;
    font-weight: 800;
    line-height: 1.3;
    margin-bottom: 3rem;
    letter-spacing: 0.02em;
  }

  .wtb-grid-{{ section.id }} {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .wtb-channel-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    text-decoration: none;
    color: {{ section.settings.text_color }};
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
  }

  .wtb-channel-{{ section.id }}.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .wtb-channel-{{ section.id }}:hover {
    transform: translateY(-4px);
  }

  .wtb-logo-{{ section.id }} {
    width: 80px;
    height: 80px;
    border-radius: 1rem;
    overflow: hidden;
    background: rgba(244, 227, 201, 0.08);
    border: 1px solid rgba(244, 227, 201, 0.12);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: box-shadow 0.3s ease;
  }

  .wtb-channel-{{ section.id }}:hover .wtb-logo-{{ section.id }} {
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }

  .wtb-logo-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 0.5rem;
  }

  .wtb-logo-placeholder-{{ section.id }} {
    font-size: 0.65rem;
    opacity: 0.4;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .wtb-name-{{ section.id }} {
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .fruttita-where-to-buy-{{ section.id }} {
      padding: 4rem 1rem;
    }

    .wtb-title-{{ section.id }} {
      font-size: 1.8rem;
    }

    .wtb-grid-{{ section.id }} {
      gap: 1.5rem;
    }

    .wtb-logo-{{ section.id }} {
      width: 64px;
      height: 64px;
    }
  }
</style>

<div class="fruttita-where-to-buy-{{ section.id }}">
  <div class="wtb-inner-{{ section.id }}">
    {% if section.settings.subtitle != blank %}
      <span class="wtb-subtitle-{{ section.id }}">{{ section.settings.subtitle }}</span>
    {% endif %}
    <h2 class="wtb-title-{{ section.id }}">{{ section.settings.title }}</h2>

    <div class="wtb-grid-{{ section.id }}" id="wtbGrid-{{ section.id }}">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="wtb-channel-{{ section.id }}" {{ block.shopify_attributes }} style="transition-delay: {{ forloop.index0 | times: 100 }}ms;" target="_blank" rel="noopener">
          <div class="wtb-logo-{{ section.id }}">
            {% if block.settings.logo != blank %}
              {{ block.settings.logo | image_url: width: 160 | image_tag: loading: 'lazy', alt: block.settings.name }}
            {% else %}
              <span class="wtb-logo-placeholder-{{ section.id }}">Logo</span>
            {% endif %}
          </div>
          <span class="wtb-name-{{ section.id }}">{{ block.settings.name }}</span>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  (function() {
    var channels = document.querySelectorAll('#wtbGrid-{{ section.id }} .wtb-channel-{{ section.id }}');
    if (!channels.length) return;
    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.15 });
    channels.forEach(function(ch) { observer.observe(ch); });
  })();
</script>

{% schema %}
{
  "name": "Fruttita Where to Buy",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle (Pacifico)",
      "default": "Find Us"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "想试试？"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F9F1E6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#4F2C1D"
    }
  ],
  "blocks": [
    {
      "type": "channel",
      "name": "Channel",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Channel Name",
          "default": "天猫"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Channel Logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Channel Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Fruttita Where to Buy",
      "blocks": [
        {
          "type": "channel",
          "settings": { "name": "天猫" }
        },
        {
          "type": "channel",
          "settings": { "name": "京东" }
        },
        {
          "type": "channel",
          "settings": { "name": "小红书" }
        },
        {
          "type": "channel",
          "settings": { "name": "抖音" }
        }
      ]
    }
  ]
}
{% endschema %}
