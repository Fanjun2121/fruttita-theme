<!-- 
  Fruttita Custom Section: The Superfood Origin
  Style: Parallax / Raw & Refined
-->

<style>
  .fruttita-origin-section {
    position: relative;
    height: 80vh;
    min-height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #F4E3C9;
  }

  .origin-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%; /* Taller for parallax */
    background-size: cover;
    background-position: center;
    z-index: 0;
    transform: translateZ(0);
    will-change: transform;
  }

  .origin-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    z-index: 1;
  }

  .origin-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    padding: 0 20px;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeUp 1s ease-out forwards;
    animation-delay: 0.5s;
  }

  .origin-badge {
    position: absolute;
    bottom: 10%;
    right: 10%;
    width: 150px;
    height: 150px;
    background: url('{{ section.settings.texture_image | image_url }}') no-repeat center center;
    background-size: contain;
    z-index: 3;
    animation: rotate 20s linear infinite;
    opacity: 0.9;
  }

  .origin-subtitle {
    font-family: 'Pacifico', cursive;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    display: block;
    color: #F4E3C9;
  }

  .origin-title {
    font-family: 'Switzer', sans-serif;
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .origin-text {
    font-family: 'Switzer', sans-serif;
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    font-weight: 500;
  }

  .origin-btn {
    display: inline-block;
    background-color: #F4E3C9;
    color: #4F2C1D;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    font-family: 'Switzer', sans-serif;
  }

  .origin-btn:hover {
    background-color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @media (max-width: 768px) {
    .origin-title { font-size: 2.5rem; }
    .origin-badge { width: 100px; height: 100px; bottom: 5%; right: 5%; }
    .origin-bg { height: 100%; background-attachment: scroll; } /* Disable parallax on mobile */
  }
</style>

<div class="fruttita-origin-section">
  <div class="origin-bg" style="background-image: url('{{ section.settings.bg_image | image_url }}');"></div>
  <div class="origin-overlay"></div>
  
  <div class="origin-content">
    <span class="origin-subtitle">{{ section.settings.subtitle }}</span>
    <h2 class="origin-title">{{ section.settings.title }}</h2>
    <p class="origin-text">{{ section.settings.text }}</p>
    <a href="{{ section.settings.link_url }}" class="origin-btn">{{ section.settings.link_text }}</a>
  </div>

  {% if section.settings.texture_image != blank %}
    <div class="origin-badge"></div>
  {% endif %}
</div>

<script>
  // Simple Parallax Effect
  window.addEventListener('scroll', function() {
    const scrolled = window.pageYOffset;
    const bg = document.querySelector('.origin-bg');
    if (window.innerWidth > 768 && bg) {
      bg.style.transform = 'translateY(' + (scrolled * 0.4) + 'px)';
    }
  });
</script>

{% schema %}
{
  "name": "Fruttita Origin",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "texture_image",
      "label": "Badge/Texture Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Raw Energy from African Savanna"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "WAKE UP<br>YOUR CELLS."
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Body Text",
      "default": "0 Sodium. 6x Vitamin C. The ancient superfood for modern recovery."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text",
      "default": "Shop Baobab Shot"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Fruttita Origin"
    }
  ]
}
{% endschema %}
