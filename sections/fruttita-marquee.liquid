<!-- 
  Fruttita Custom Section: Infinite Marquee 
-->

<style>
  .fruttita-marquee-section {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 1rem 0;
    overflow: hidden;
    white-space: nowrap;
    border-top: 1px solid rgba(244, 227, 201, 0.2);
    border-bottom: 1px solid rgba(244, 227, 201, 0.2);
  }

  .marquee-content {
    display: inline-block;
    animation: marquee {{ section.settings.speed }}s linear infinite;
    font-family: 'Switzer', sans-serif;
    font-weight: 700;
    font-size: 1.1rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .marquee-item {
    display: inline-block;
    padding: 0 2rem;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .fruttita-marquee-section:hover .marquee-content {
    animation-play-state: paused;
  }
</style>

<div class="fruttita-marquee-section">
  <div class="marquee-content">
    {% for i in (1..10) %}
      <span class="marquee-item">{{ section.settings.text }}</span>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Fruttita Marquee",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Marquee Text",
      "default": "• No Sodium Bloat • High Vitamin C • Prebiotic Fiber • Morning Recovery"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#4F2C1D"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#F4E3C9"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "Animation Speed",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Fruttita Marquee"
    }
  ]
}
{% endschema %}
