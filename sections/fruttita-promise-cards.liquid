<!--
  Fruttita Custom Section: Promise Cards
  4-column commitment cards (Clean Label / 数据透明 / 可持续采购 / 合规底线)
-->

<style>
  .fruttita-promise-{{ section.id }} {
    background-color: #4F2C1D;
    color: #F4E3C9;
    padding: 6rem 1.5rem;
    font-family: 'Switzer', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .fruttita-promise-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 0;
  }

  .pm-inner-{{ section.id }} {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
  }

  .pm-header-{{ section.id }} {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .pm-title-{{ section.id }} {
    font-size: 2.2rem;
    font-weight: 800;
    line-height: 1.3;
    letter-spacing: 0.02em;
  }

  .pm-grid-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .pm-card-{{ section.id }} {
    background: rgba(244, 227, 201, 0.06);
    border: 1px solid rgba(244, 227, 201, 0.1);
    border-radius: 1.25rem;
    padding: 2rem 1.5rem;
    text-align: center;
    transition: transform 0.4s ease, background 0.4s ease;
    opacity: 0;
    transform: translateY(30px);
  }

  .pm-card-{{ section.id }}.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .pm-card-{{ section.id }}:hover {
    transform: translateY(-4px);
    background: rgba(244, 227, 201, 0.1);
  }

  .pm-icon-{{ section.id }} {
    width: 40px;
    height: 40px;
    margin: 0 auto 1rem;
    color: #D38235;
    opacity: 0.85;
  }

  .pm-icon-{{ section.id }} svg {
    width: 100%;
    height: 100%;
  }

  .pm-card-title-{{ section.id }} {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.8rem;
    letter-spacing: 0.02em;
  }

  .pm-card-body-{{ section.id }} {
    font-size: 0.9rem;
    line-height: 1.7;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .fruttita-promise-{{ section.id }} {
      padding: 4rem 1rem;
    }

    .pm-grid-{{ section.id }} {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .pm-title-{{ section.id }} {
      font-size: 1.8rem;
    }

    .pm-card-{{ section.id }} {
      padding: 1.5rem 1rem;
    }
  }
</style>

<div class="fruttita-promise-{{ section.id }}">
  <div class="pm-inner-{{ section.id }}">
    <div class="pm-header-{{ section.id }}">
      <h2 class="pm-title-{{ section.id }}">{{ section.settings.title }}</h2>
    </div>

    <div class="pm-grid-{{ section.id }}" id="pmGrid-{{ section.id }}">
      {% for block in section.blocks %}
        <div class="pm-card-{{ section.id }}" {{ block.shopify_attributes }} style="transition-delay: {{ forloop.index0 | times: 120 }}ms;">
          <div class="pm-icon-{{ section.id }}">
            {% case block.settings.icon %}
              {% when 'label' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>
              {% when 'chart' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>
              {% when 'globe' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/></svg>
              {% when 'shield' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
              {% else %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
            {% endcase %}
          </div>
          <h3 class="pm-card-title-{{ section.id }}">{{ block.settings.title }}</h3>
          <p class="pm-card-body-{{ section.id }}">{{ block.settings.body }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  (function() {
    var cards = document.querySelectorAll('#pmGrid-{{ section.id }} .pm-card-{{ section.id }}');
    if (!cards.length) return;
    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.15 });
    cards.forEach(function(card) { observer.observe(card); });
  })();
</script>

